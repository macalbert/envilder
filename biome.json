{
  "$schema": "https://biomejs.dev/schemas/2.1.1/schema.json",
  "files": {
    "experimentalScannerIgnores": [
      "node_modules",
      "lib",
      "dist",
      "coverage",
      ".lock",
      "*.lock",
      "*-lock.*",
      "*.md"
    ],
    "ignoreUnknown": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "all",
      "semicolons": "always"
    },
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    }
  },
  "overrides": [],
  "plugins": null,
  "root": true,
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "defaultBranch": "main",
    "useIgnoreFile": true
  }
}
