{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./lib",
    "module": "ESNext",
    "moduleResolution": "Node",
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "es2016",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "lib": [
      "es2022"
    ],
    "declaration": true,
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": [
      "node",
      "picocolors"
    ]
  },
  "include": [
    "src/**/*"
  ]
}