{
  "$schema": "https://biomejs.dev/schemas/2.0.6/schema.json",
  "files": {
    "include": [
      "./src/**",
      "./tests/**",
      "./scripts/**"
    ],
    "ignore": [
      "**/node_modules/**",
      "**/lib/**",
      "**/dist/**",
      "**/coverage/**",
      "**/.lock",
      "**/.md"
    ]
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "all",
      "semicolons": "always"
    }
  }
}